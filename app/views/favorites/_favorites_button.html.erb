<% if current_user.favor?(select_micropost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: select_micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, select_micropost.id %>
    <%= f.submit 'Unfavor', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, select_micropost.id %>
    <%= f.submit 'Favor', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
